@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}


<body class="container" style="margin-top:100px">
   
<div class="row">
    <div class="col-md-12">
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">

                <h2>Register a new Admin </h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
               

                <div class="form-row">
                    <div class="form-group col-md-3">
                        <label for="firstName">First Name</label>
                        <input type="text" class="form-control" aria-required="true" asp-for="Input.firstName" placeholder="FirstName ">
                        <span asp-validation-for="Input.firstName" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-3">
                        <label for="secondName">Second Name</label>
                        <input type="text" class="form-control" aria-required="true" asp-for="Input.secondName" placeholder="Second Name ">
                        <span asp-validation-for="Input.secondName" class="text-danger"></span>
                    </div>



                    <div class="form-group col-md-3">
                        <label for="thiredName ">Third  Name</label>
                        <input type="text" class="form-control" aria-required="true" asp-for="Input.thiredName" placeholder="Third Name ">
                        <span asp-validation-for="Input.thiredName" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-3">
                        <label for="lastName">Last Name</label>
                        <input type="text" class="form-control" aria-required="true" asp-for="Input.lastName" placeholder="Last Name ">
                        <span asp-validation-for="Input.lastName" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group col-md-12">
                        <label for="inputEmail4">Email</label>
                        <input type="email" class="form-control" aria-required="true" asp-for="Input.Email" placeholder="Email">
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-12">
                        <label for="inputPassword4">Password</label>
                        <input type="password" class="form-control" aria-required="true" asp-for="Input.Password" placeholder="Password">
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-12">
                        <label for="inputPassword4">Password</label>
                        <input type="password" class="form-control" aria-required="true" asp-for="Input.ConfirmPassword" placeholder="Confirm Password">
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>
                </div>
